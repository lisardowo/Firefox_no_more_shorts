{
    "manifest_version": 3,
    "name": "No More Shorts",
    "version": "1.4.4",
    "description": "Hides Youtube Shorts automatically",
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["app.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["ShortsRemover.js"],
            "matches": ["*://*.youtube.com/*"]
        }
        
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "No More Shorts"
    },
    "browser_specific_settings": {
        "gecko": {
            "id":"nomoreshorts@multibrowser",
            "strict_min_version": "109.9"
        }

    }
}
